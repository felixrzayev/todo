@page "/todolist"
@rendermode InteractiveServer
<h3>To Do</h3>
<br />

<button type="button" class="btn btn-outline-primary" @onclick="AddTask">Add Task</button>
<br />
<br />

@if (items != null && items.Count > 0)
{

    <ul>
        @foreach(var item in items)
        {
            <li @key="item.Id">
                @item.Name
            </li>
        }
    </ul>

}


@code {

    private List<ToDoItem> items = ToDoItemsRepo.GetItems();

    private void AddTask()
    {
        ToDoItemsRepo.AddItem( new ToDoItem{ Name = "New Task" });
        items = ToDoItemsRepo.GetItems();
    }
}
